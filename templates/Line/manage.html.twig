{% trans_default_domain "Timetable" %}

{% extends "Default/template.html.twig" %}

{% form_theme form
    'Line/activity_collection.html.twig'
    '@HillrangeForm/FormTheme/jquery.collection.html.twig'
    '@HillrangeForm/FormTheme/bootstrap.html.twig'
%}

{% block title %}{{ parent() }}{{ 'line.manage.title'|trans }}{% endblock title %}
{% block headerTitle %}{{ 'line.manage.title'|trans }}{% endblock headerTitle %}
{% block headerLead %}{{ 'line.manage.description'|trans }}{% endblock headerLead %}

{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}

{% block contentContainer %}
    {{ all_form_errors(fullForm, "div", "alert alert-danger fadeAlert") }}
    {{ form_start(form, {attr:{id: 'line_form'}}) }}
    {% set route = {} %}
    {% if app.request.get('closeWindow') is not empty %}
        {% set h3Content = closeButton({mergeClass: 'disableOnChange'})|raw %}
        {% set route = route|merge({'closeWindow': '_closeWindow'}) %}
    {% else %}
        {% set h3Content = returnButton({mergeClass: 'disableOnChange', windowOpen: {route: path('line_list')}}) %}
    {% endif %}
    {% if app.request.attributes.get('id') != 'Add' %}{% set h3Content = h3Content ~ addButton({'windowOpen': {'route': path('line_manage', {'id': 'Add'}) }}) %}{% endif %}
    {% set h3Content = h3Content ~ resetButton({'type': 'button', 'windowOpen': {'route': path('line_manage', {'id': app.request.get('id')}|merge(route))}}) %}
    {% set h3Content = h3Content ~ saveButton() %}
    {% set h3Content = h3Content ~ form_widget(form.changeRecord, {'value': app.request.attributes.get('id')}) %}
    {% include 'Page/panelStart.html.twig' with {'header': 'line.manage.title', 'transDomain': 'Timetable'} %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <div class="col-6 card">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="col-6 card">
                        {{ form_row(form.code) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 card">
                        {{ form_row(form.calendar) }}
                        {{ form_row(form.participants) }}
                    </div>
                    <div class="col-6 card">
                        {{ form_row(form.course, {value: transformData(form.course)}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 card">
                        {{ form_row(form.includeAll) }}
                    </div>
                    {% if app.request.get('id') != 'Add' %}
                        <div class="col-6 card">
                            <div class="form-group">
                                {{ miscButton({'class': 'btn btn-info fas fa-check testLine'})|raw }}
                                <label class="control-label">{{ 'line.test.label'|trans }}</label><br>
                                <small class="form-text text-muted">{{ 'line.test.help'|trans }}</small>
                            </div>
                        </div>
                    {% endif %}
                </div>
                <div class="row">
                    <div class="col-12 card" id="reportResults" style="display: none;">
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="row">
                    <div class="col-12">
                        {% if form.activities is defined %}
                            {% set h3Content = '' %}
                            {% include 'Page/panelStart.html.twig' with {'header': form.activities.vars.label, 'transDomain': 'Timetable', 'panelParagraph': form.activities.vars.help, 'panelStyle': 'info'} %}
                            {{ form_widget(form.activities) }}
                            {% include 'Page/panelEnd.html.twig' %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include 'Page/panelEnd.html.twig' %}
    {{ form_end(form) }}
{% endblock contentContainer %}


{% block javascripts %}
    {{ parent() }}
    {{ collections_manage(form, ['activities'])|raw }}
    {% include '@HillrangeForm/Toggle/script.html.twig' %}
    {% set route = 'line_manage' %}
    {% include 'Script/monitorForm.html.twig' %}
    <script type="text/javascript" language="JavaScript">
        $('.testLine').click(function (e) {
            var path = '{{ path('line_test', {'id': '__id__'}) }}';
            path = path.replace('__id__', '{{ app.request.get('id') }}');
            window.open(path, 'Report', 'width=500,height=500,menubar=no,top=200,left=200');
        })
    </script>
    {% if app.request.get('closeWindow') is not empty %}
        <script type="application/javascript" language="JavaScript">
            $('#line_form').submit(function (event) {
                var path = '{{ path('line_manage', {id: app.request.get('id'), closeWindow: '_closeWindow'}) }}';

                $(this).attr('action', path);
                return true;
            });
        </script>
    {% endif %}
{% endblock javascripts %}