{% extends "Default/template.html.twig" %}

{% trans_default_domain 'System' %}

{% form_theme form
    '@HillrangeForm/FormTheme/bootstrap.html.twig'
    '@HillrangeForm/FormTheme/jquery.collection.html.twig'
    'Setting/translateCollection.html.twig'
%}

{% block title %}{{ 'system.string_replacement.title'|trans }}{% endblock title %}
{% block headerTitle %}{{ 'system.string_replacement.title'|trans }}{% endblock headerTitle %}
{% block headerLead %}{{ 'system.string_replacement.description'|trans }}{% endblock headerLead %}


{% block contentContainer %}
    {{ all_form_errors(fullForm, "div") }}
    {{ form_start(form) }}
    {% include 'Page/panelStart.html.twig' with {header: 'string_replacement.edit.title', transDomain: 'System', panelParagraph: 'string_replacement.edit.help', panelParams: {'%{path}': path('setting_manage')}} %}

    {{ collection_row(form.strings) }}

    {% include 'Page/panelEnd.html.twig' %}
    {{ form_end(form) }}
{% endblock contentContainer %}


{% block javascripts %}
    {{ parent() }}
    {{ collections_manage(form, ['strings'])|raw }}
    {{ collection_script(form.strings) }}
{% endblock javascripts %}
