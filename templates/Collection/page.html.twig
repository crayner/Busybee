{% extends "Default/test_template.html.twig" %}

{% form_theme form
    '@HillrangeForm/FormTheme/bootstrap.html.twig'
    'Collection/jquery.collection.html.twig'
    'Collection/test_collection.html.twig'
%}

{% block contentContainer %}
{{ form_start(form) }}
    {{ form_row(form.values) }}
{{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/hillrangeform/js/jquery.collection.js') }}"></script>
    {% set collection = form.values %}
    <div class="collection" data-collection="{{ collection.vars.id }}"></div>
    <script>
        $(".collection").collection({
            name_prefix: '{{ collection.vars.full_name }}',
            add: '{{ addButton({mergeClass: 'btn-sm'})|raw }}',
            remove: '{{ removeButton({mergeClass: 'btn-sm'})|raw }}',
            up: '{{ upButton({mergeClass: 'btn-sm'})|raw }}',
            down: '{{ downButton({mergeClass: 'btn-sm'})|raw }}',
            add_at_the_end: true,
            allow_up: true,
            allow_down: true,
            before_remove: function (collection, element) {
                console.log('Removal Clicked');
                return false;
            }
        });
    </script>
{% endblock %}


