{% trans_default_domain "Timetable" %}

{% block tt_day_label %}{% endblock %}
{% block tt_day_errors %}{% endblock %}

{% block tt_day_widget %}
    {% spaceless %}
    {% set h3Content = '<div class="collection-actions collection-panel">' %}
    {% set h3Content = h3Content ~ saveButton() %}
    {% set h3Content = h3Content ~ deleteButton({title: 'activity.tt_day.remove.title', transDomain: 'Calendar', class: 'fas fa-eraser btn btn-warning collection-remove collection-action'}) %}
    {% set h3Content = h3Content ~ '<span style="float: right;">&nbsp;</span>' %}
    {% set h3Content = h3Content ~ upDownButton() %}
    {% set h3Content = h3Content ~ '</div>' %}
    <div class="row">
        <div class="col-2 card">
            {{ form_row(form.name) }}
        </div>
        <div class="col-2 card">
            {{ form_row(form.code) }}
        </div>
        <div class="col-2 card">
            {{ form_row(form.colour) }}
        </div>
        <div class="col-2 card">
            {{ form_row(form.fontColour) }}
        </div>
        <div class="col-4 card">
            {{ h3Content|raw }}
            {{ form_row(form.timetable, {value: app.request.get('id')}) }}
            {{ form_rest(form) }}
        </div>
    </div>
    {% endspaceless %}
{% endblock tt_day_widget %}
