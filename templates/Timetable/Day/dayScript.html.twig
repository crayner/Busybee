{% trans_default_domain "BusybeeTimeTableBundle" %}
{% set locked = form.locked.vars.data %}
<!-- dayCollection -->
<script type="text/javascript">
    $(".dayCollection").collection({
        name_prefix: '{{ form.days.vars.full_name }}',
        {% if locked %}
        add: '',
        remove: '',
        {% else %}
        add: '{{ addButton({title: 'timetable.day.add.title', transDomain: 'Timetable'})|raw }}',
        remove: '{{ deleteButton({title: 'timetable.day.remove.title', transDomain: 'Timetable'})|raw }}',
        add_at_the_end: true,
        {% endif %}
        allow_up: false,
        allow_down: false,
        hide_useless_buttons: true
    });
</script>
