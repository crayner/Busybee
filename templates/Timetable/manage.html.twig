{% trans_default_domain "Timetable" %}

{% extends "Default/template.html.twig" %}

{% form_theme form
    '@HillrangeForm/FormTheme/bootstrap.html.twig'
    "@HillrangeForm/FormTheme/jquery.collection.html.twig"
    'Timetable/tt_day.html.twig'
%}

{% block title %}{{ parent() }}{{ 'timetable.manage.title'|trans }}{% endblock title %}
{% block headerTitle %}{{ 'timetable.manage.title'|trans }}{% endblock headerTitle %}
{% block headerLead %}{{ 'timetable.manage.description'|trans }}{% endblock headerLead %}

{% set tabManager = manager %}
{% block contentContainer %}
    {% set transDomain = 'Timetable' %}
    {{ all_form_errors(fullForm, "section", "alert alert-danger alert-dismissable show hide") }}
    {% set h3Content = returnButton({returnTo: path('timetable_list')})|raw %}
    {%  set h3Content = h3Content ~ resetButton() %}
    {%  set h3Content = h3Content ~ saveButton() %}
    {% if header is not defined %}{% set header = 'timetable.manage.title' %}{% endif %}
    {{ form_start(form) }}
        {% include '@HillrangeForm/Script/collection_message.html.twig' %}
        {% include '/Default/tabs.html.twig' %}
    {{ form_end(form) }}
{% endblock contentContainer %}

{% block javascripts %}
    {{ parent() }}
    {% include '@HillrangeForm/Toggle/script.html.twig' %}
    {% include '@HillrangeForm/Script/jquery_collection.html.twig' %}
    {% include 'Script/formTabSubmitScript.html.twig' with {route: 'timetable_manage'} %}
    {% include 'Script/monitorForm.html.twig' %}
{% endblock %}