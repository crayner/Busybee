{% trans_default_domain "Timetable" %}

{% extends "Default/template.html.twig" %}

{% form_theme form
    '@HillrangeForm/FormTheme/bootstrap.html.twig'
%}

{% block title %}{{ parent() }}{{ 'timetable.manage.title'|trans }}{% endblock title %}
{% block headerTitle %}{{ 'timetable.manage.title'|trans }}{% endblock headerTitle %}
{% block headerLead %}{{ 'timetable.manage.description'|trans }}{% endblock headerLead %}

{% block contentContainer %}
    {% set transDomain = 'Timetable' %}
    {{ all_form_errors(fullForm, "div", "alert alert-danger alert-dismissable show hide") }}
    {% set h3Content = returnButton({returnTo: path('timetable_list')})|raw %}
    {%  set h3Content = h3Content ~ saveButton() %}
    {% if header is not defined %}{% set header = 'timetable.manage.title' %}{% endif %}
    {{ form_start(form) }}
    {% include 'Page/panelStart.html.twig' with {'header': header} %}
    <div class="row">
        <div class="col-8 card">
            <div class="row">
                <div class="col-8 card">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-4 card">
                    {{ form_row(form.code) }}
                </div>
            </div>
            <div class="row">
                <div class="col-8 card">
                    {{ form_row(form.calendar, {value: transformData(form.calendar)}) }}
                </div>
                <div class="col-4 card">
                    {{ form_row(form.active) }}
                </div>
            </div>
        </div>
        <div class="col-4 card">
            {{ form_row(form.calendarGrades) }}
        </div>
    </div>
    {% include 'Page/panelEnd.html.twig' %}
    {{ form_end(form) }}
{% endblock contentContainer %}


{% block javascripts %}
    {{ parent() }}
    {% include '@HillrangeForm/Toggle/script.html.twig' %}
{% endblock %}