{% trans_default_domain 'School' %}

{% block _department_courses_entry_label %}{% endblock %}
{% block _department_courses_entry_error %}{% endblock %}

{% block _department_courses_entry_widget %}
    {% spaceless %}
        {% set h3Content = '<div class="collection-actions collection-panel">' %}
        {% set h3Content = h3Content ~ deleteButton({title: 'department.course.remove', transDomain: 'School', mergeClass: 'collection-remove collection-action', colour: 'warning'})|raw %}
        {% set h3Content = h3Content ~ '<span style="float: right;">&nbsp;</span>' %}
        {% set h3Content = h3Content ~ '</div>' %}
        <div class="container-fluid">
            <div class="row">
                <div class="col-9 card">
                    {{ form_row(form, {value: transformData(form.vars)}) }}
                </div>
                <div class="col-3 card">
                    {{ h3Content|raw }}
                </div>
            </div>
        </div>
    {% endspaceless %}
{% endblock _department_courses_entry_widget %}