{% if transDomain is not defined %}
    {% set transDomain = 'Busybee' %}
{% endif %}

{% trans_default_domain transDomain %}

{% if flashClass is defined %}
    {% set flashClass = " " ~ flashClass %}
{% else %}
    {% set flashClass = "" %}
{% endif %}

{% if app.session is not empty and app.session.flashBag is not empty %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        {% include '@BusybeeTemplate/Default/flashSplit.html.twig' with {'theMessage': flashMessage, level: 'danger'} %}
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('danger') %}
        {% include '@BusybeeTemplate/Default/flashSplit.html.twig' with {'theMessage': flashMessage, level: 'danger'} %}
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('warning') %}
        {% include '@BusybeeTemplate/Default/flashSplit.html.twig' with {'theMessage': flashMessage, level: 'warning'} %}
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('info') %}
        {% include '@BusybeeTemplate/Default/flashSplit.html.twig' with {'theMessage': flashMessage, level: 'info'} %}
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('success') %}
        {% include '@BusybeeTemplate/Default/flashSplit.html.twig' with {'theMessage': flashMessage, level: 'success'} %}
    {% endfor %}
{% endif %}