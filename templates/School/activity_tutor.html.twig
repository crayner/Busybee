{% trans_default_domain "School" %}

{% block activity_tutor_label %}{% endblock %}
{% block activity_tutor_errors %}{% endblock %}

{% block activity_tutor_widget %}
    {% spaceless %}
        {% set h3Content = '<div class="collection-actions collection-panel">' %}
        {% set title = 'activity.tutor.title'|trans %}
        {% if form.vars.value is not empty %}
            {% set title = form.vars.value.tutor.fullName %}
        {% endif %}
        {% set h3Content = h3Content ~ title %}
        {% set h3Content = h3Content ~ saveButton() %}
        {% set h3Content = h3Content ~ deleteButton({title: 'activity.activity_tutor.remove.title', transDomain: 'Calendar', class: 'halflings halflings-erase btn btn-warning collection-remove collection-action'}) %}
        {% set h3Content = h3Content ~ '<span style="float: right;">&nbsp;</span>' %}
        {% set h3Content = h3Content ~ upDownButton() %}
        {% set h3Content = h3Content ~ '</div>' %}
        <div class="container-fluid">
            <div class="row row-header">
                <div class="col-12"> {{ h3Content|raw }}</div>
            </div>
            <div class="row">
                <div class="col-7 card">
                    {% set data = form.tutor.vars.value %}
                    {% if data is empty %}
                        {% set data = form.tutor.vars.data %}
                    {% endif %}
                    {{ form_row(form.tutor, {value: data}) }}
                    {{ form_row(form.activity) }}
                    {{ form_row(form.sequence) }}
                </div>
                <div class="col-5 card">
                    {{ form_row(form.role) }}
                </div>
            </div>
        </div>
    {% endspaceless %}
{% endblock activity_tutor_widget %}
