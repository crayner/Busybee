{% extends "Default/template.html.twig" %}

{% trans_default_domain 'School' %}

{% form_theme form
    '@HillrangeForm/FormTheme/bootstrap.html.twig'
%}

{% block title %}{{ 'school.activity.edit.title'|trans }}{% endblock title %}
{% block headerTitle %}{{ 'school.activity.edit.title'|trans }}{% endblock headerTitle %}
{% block headerLead %}{{ 'school.activity.edit.description'|trans }}{% endblock headerLead %}

{% block contentContainer %}
    {{ form_start(form) }}
    {% set h3Content = '' %}
    {% if app.request.get('closeWindow') is not empty %}
        {% set h3Content = h3Content ~ closeButton() %}
    {% else %}
        {% set h3Content = h3Content ~ returnButton({windowOpen: {route: path('roll_list')}}) %}
    {% endif %}
    {% set h3Content = h3Content ~ saveButton() %}
    {% include 'Page/panelStart.html.twig' with {header: 'school.activity.edit.title', name: form.vars.value.fullName|default(''), transDomain: 'School'} %}
    <div class="row">
        <div class="col-8 card">
            <div class="row">
                <div class="col-6 card">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-3 card">
                    {{ form_row(form.code) }}
                </div>
                <div class="col-3 card">
                    {{ form_row(form.useCourseName) }}
                </div>
            </div>
            <div class="row">
                <div class="col-6 card">
                    {{ form_row(form.website) }}
                </div>
                <div class="col-6 card">
                    {{ form_row(form.space, {value: transformData(form.space)}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-6 card">
                    {% if form.nextRoll is defined %}
                    {{ form_row(form.nextRoll) }}
                    {% endif %}
                </div>
                <div class="col-6 card">
                </div>
            </div>
        </div>
        <div class="col-4 card">
            {{ form_row(form.students) }}
        </div>
    </div>
    {% include 'Page/panelEnd.html.twig' %}
    {{ form_end(form) }}
{% endblock contentContainer %}

{% block javascripts %}
    {{ parent() }}
    {% include '@HillrangeForm/Toggle/script.html.twig' %}
{% endblock javascripts %}