{% extends "Default/template.html.twig" %}

{% trans_default_domain 'School' %}

{% block title %}{{ 'school.roll.list.title'|trans({'%{calendar}': pagination.calendarManager.currentCalendar.name}) }}{% endblock title %}
{% block headerTitle %}{{ 'school.roll.list.title'|trans({'%{calendar}': pagination.calendarManager.currentCalendar.name}) }}{% endblock headerTitle %}
{% block headerLead %}{{ 'school.roll.list.description'|trans  }}{% endblock headerLead %}

{% block contentContainer %}
    {% include 'Pagination/index.html.twig' %}
    {% if is_granted('ROLE_SYSTEM_ADMIN') %}
        {% set h3Content = addButton({windowOpen: {route: path('activity_edit', {id: 'Add', activityType: 'roll_list'})}}) %}
    {% endif %}
    {% include 'Page/panelStart.html.twig' with {header: 'school.roll.list.title', name: {'%{calendar}': pagination.calendarManager.currentCalendar.name}, transDomain: 'School', panelParagraph: 'school.roll.list.help'} %}
    <div class="container-fluid">
        <div class="row row-header">
            <div class="col-3 text-center" style="display: inline-block;">
                   {{ 'roll.name.label'|trans }}<br /><small>{{ 'roll.name_short.label'|trans }}</small>
            </div>
            <div class="col-3">
                {{ 'roll.space.label'|trans({}) }}
            </div>
            <div class="col-3">
                {{ 'roll.details.label'|trans({}) }}
            </div>
            <div class="col-3 withAdd">
                {{ 'system.setting.manage.actions'|trans({}, 'System') }}
            </div>
        </div>
        {% for roll in pagination.getResult %}
            <div class="row row-striped">
                <div class="col-3 form-inline text-center">
                    {{ roll.name }}<br /><small>{{ roll.nameShort }}</small>
                </div>
                <div class="col-3 form-inline">
                    {{ roll.spaceName }}
                </div>
                <div class="col-3 form-inline small">
                    {{ manager.details(roll.0)|raw }}
                </div>
                <div class="col-3 form-inline">
                    {{ editButton({class: 'halflings halflings-edit btn btn-warning', title: 'school.roll.edit.title', transDomain: 'School', windowOpen: {route: path('roll_edit', {id: roll.id})}})|raw }}
                </div>
            </div>
        {% endfor %}
    </div>
    {% include 'Page/panelEnd.html.twig' %}
{% endblock contentContainer %}

