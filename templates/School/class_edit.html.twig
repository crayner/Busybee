{% extends "Default/template.html.twig" %}

{% trans_default_domain 'School' %}

{% form_theme form
    '@HillrangeForm/FormTheme/bootstrap.html.twig'
    '@HillrangeForm/FormTheme/jquery.collection.html.twig'
    'School/activity_tutor.html.twig'
    'School/class_student.html.twig'
%}

{% block title %}{{ 'school.face_to_face.edit.title'|trans }}{% endblock title %}
{% block headerTitle %}{{ 'school.face_to_face.edit.title'|trans }}{% endblock headerTitle %}
{% block headerLead %}{{ 'school.face_to_face.edit.description'|trans }}{% endblock headerLead %}

{% block contentContainer %}
    {{ all_form_errors(fullForm, "div", "alert alert-danger alert-disappear show hide") }}
    {{ form_start(form, {attr: {id: 'saveForm'}}) }}
    {% include '@HillrangeForm/Script/collection_message.html.twig' %}
    {% include 'Default/tabs.html.twig' %}
    {{ form_end(form) }}
{% endblock contentContainer %}

{% block javascripts %}
    {{ parent() }}
    {% include '@HillrangeForm/Toggle/script.html.twig' %}
    {% include '@HillrangeForm/Script/jquery_collection.html.twig' %}
    {% include 'Script/formTabSubmitScript.html.twig' with {route: 'face_to_face_edit', options: {'course_id': app.request.get('course_id')}} %}
{% endblock %}
