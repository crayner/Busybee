{% extends "Default/template.html.twig" %}

{% trans_default_domain 'School' %}

{% form_theme form
    '@HillrangeForm/FormTheme/bootstrap.html.twig'
%}

{% block title %}{{ 'school.face_to_face.edit.title'|trans }}{% endblock title %}
{% block headerTitle %}{{ 'school.face_to_face.edit.title'|trans }}{% endblock headerTitle %}
{% block headerLead %}{{ 'school.face_to_face.edit.description'|trans }}{% endblock headerLead %}

{% block contentContainer %}
    {{ form_start(form) }}
    {% set h3Content = '' %}
    {% set h3Content = h3Content ~ returnButton({windowOpen: {route: path('course_edit', {id: course_id})}}) %}
    {% set h3Content = h3Content ~ saveButton() %}
    {% include 'Page/panelStart.html.twig' with {header: 'school.face_to_face.manage.title', name: form.vars.value.fullName, transDomain: 'School'} %}

    <div class="row">
        <div class="col-8 card">
            <div class="row">
                <div class="col-6 card">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-6 card">
                    {{ form_row(form.nameShort) }}
                </div>
            </div>
            <div class="row">
                <div class="col-6 card">
                    {{ form_row(form.attendance) }}
                </div>
                <div class="col-6 card">
                    {{ form_row(form.reportable) }}
                </div>
            </div>
            <div class="row">
                <div class="col-6 card">
                    {{ form_row(form.website) }}
                </div>
                <div class="col-6 card">
                    {{ form_row(form.space) }}
                </div>
            </div>
            <div class="row">
                <div class="offset-6 col-6 card">
                    {{ form_row(form.tutors) }}
                </div>
            </div>
        </div>
        <div class="col-4 card">
            {{ form_row(form.students, {help_params: {'%{count}': form.students.vars.choices|length}}) }}
        </div>
    </div>
    {% dump(form) %}
    {% include 'Page/panelEnd.html.twig' %}
    {{ form_end(form) }}
{% endblock contentContainer %}

{% block javascripts %}
    {{ parent() }}
    {% include '@HillrangeForm/Toggle/script.html.twig' %}
{% endblock %}
