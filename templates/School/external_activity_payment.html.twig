{% trans_default_domain 'School' %}

{% if app.request.get('closeWindow')|default('') is not same as('') %}
    {% set h3Content = closeButton() %}
{% else %}
    {% set h3Content = returnButton({windowOpen: {route: path('activity_return', {id: app.request.get('id'), hint: 'external', closeWindow: app.request.get('closeWindow')|default('')  })}}) %}
{% endif %}
{% set h3Content = h3Content ~ saveButton() %}
{% include 'Page/panelStart.html.twig' with {header: 'activity.external.payment.tab', panelParagraph: 'school.external_activity.manage.title', panelParams: {'%name%': form.vars.value.fullName}, transDomain: 'School'} %}
<div class="row">
    <div class="col-12 card">
        <div class="row row-header">
            <div class="col-12 card">
                {{ 'Payment Details'|trans }}
            </div>
        </div>
        <div class="row">
            <div class="col-4 card">
                {{ form_row(form.payment) }}
            </div>
            <div class="col-4 card">
                {{ form_row(form.paymentType) }}
            </div>
            <div class="col-4 card">
                {{ form_row(form.paymentFirmness) }}
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12 card">
        <div class="row row-header">
            <div class="col-12 card">
                {{ form.description.vars.label|trans }}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                {{ form_widget(form.description) }}
            </div>
        </div>
    </div>
</div>
{% include 'Page/panelEnd.html.twig' %}

{% set x = addScript('School/activity_slot_script.html.twig') %}
