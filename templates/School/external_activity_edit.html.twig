{% extends "Default/template.html.twig" %}

{% trans_default_domain 'School' %}

{% form_theme form
    '@HillrangeForm/FormTheme/bootstrap.html.twig'
    '@HillrangeForm/FormTheme/jquery.collection.html.twig'
    'School/activity_tutor.html.twig'
%}

{% block title %}{{ 'school.face_to_face.edit.title'|trans }}{% endblock title %}
{% block headerTitle %}{{ 'school.face_to_face.edit.title'|trans }}{% endblock headerTitle %}
{% block headerLead %}{{ 'school.face_to_face.edit.description'|trans }}{% endblock headerLead %}

{% block contentContainer %}
    {{ form_start(form) }}
    {% set h3Content = '' %}
    {% set h3Content = h3Content ~ returnButton({windowOpen: {route: path('external_activity_list')}}) %}
    {% set h3Content = h3Content ~ saveButton() %}
    {% include 'Page/panelStart.html.twig' with {header: 'school.external_activity.manage.title', name: form.vars.value.fullName, transDomain: 'School'} %}

    <div class="row">
        <div class="col-8 card">
            <div class="row">
                <div class="col-6 card">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-6 card">
                    {{ form_row(form.provider) }}
                </div>
            </div>
            <div class="row">
                <div class="col-6 card">
                    {{ form_row(form.active) }}
                </div>
                <div class="col-6 card">
                    {{ form_row(form.registration) }}
                </div>
            </div>
            <div class="row">
                <div class="col-6 card">
                </div>
                <div class="col-6 card">
                </div>
            </div>
            <div class="row">
                <div class="col-12 card">
                    {{ form_row(form.tutors) }}
                </div>
            </div>
        </div>
        <div class="col-4 card">
            {{ form_row(form.students, {help_params: {'%{count}': form.students.vars.choices|length}}) }}
        </div>
    </div>
    {% include 'Page/panelEnd.html.twig' %}
    {{ form_end(form) }}
{% endblock contentContainer %}

{% block javascripts %}
    {{ parent() }}
    {% include '@HillrangeForm/Toggle/script.html.twig' %}
    {% include '@HillrangeForm/Script/jquery_collection.html.twig' %}
    {% include 'School/activity_tutor_script.html.twig' %}
{% endblock %}
